<h1><%= @place["name"] %></h1>

<p>
    <button class="btn btn-primary" onclick="location.href='/posts/new?place_id=<%= @place["id"] %>'">New Post</button>
</p>

<div class="row">
  <% for post in @posts %>
    <div class="col-md-4 col-sm-6">
      <h3><%= post["title"] %></h3>
      <h6><%= post["posted_on"] %></h6>
            <% if post.uploaded_image.attached? %>
        <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
      <% else %>
      <p>No image uploaded.</p>
      <% end %>
      <p><%= post["description"] %></p>
    </div>
  <% end %>
</div>
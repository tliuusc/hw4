<% if @current_user %>
  <h2>New Post</h2>

  <%= form_with :model => @post do |form| %>
    <%= form.hidden_field "place_id" %>
    <%= form.hidden_field "user_id" %>
    <p>
      <%= form.label "title", :class => "form-label" %>
      <%= form.text_field "title", :class => "form-control" %>
    </p>
    <p>
      <%= form.label "description", :class => "form-label" %>
      <%= form.text_field "description", :class => "form-control" %>
    </p>
    <p>
      <%= form.label "posted_on", :class => "form-label" %>
      <%= form.date_field "posted_on", :class => "form-control" %>
    </p>
    <div class="mb-3">
      <%= form.label "uploaded_image", :class => "form-label" %>
      <%= form.file_field "uploaded_image", :accept => "image/png,image/jpg,image/jpeg,image/gif", :class => "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.submit "Create Post", :class => "btn btn-primary" %>
    </div>
  <% end %>

<% else %>
  <p>
    You must be logged in.
  </p>
<% end %>